<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/grad3"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button2"
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:background="@drawable/back"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bot"
        android:layout_width="225dp"
        android:layout_height="138dp"
        android:background="@drawable/konter3"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="👊"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/paper"
        app:layout_constraintEnd_toStartOf="@+id/paper"
        app:layout_constraintTop_toTopOf="@+id/paper" />

    <Button
        android:id="@+id/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="✌"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/bot"
        app:layout_constraintStart_toStartOf="@+id/bot"
        app:layout_constraintTop_toBottomOf="@+id/bot" />

    <Button
        android:id="@+id/scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="🖐"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/paper"
        app:layout_constraintStart_toEndOf="@+id/paper"
        app:layout_constraintTop_toTopOf="@+id/paper"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="202dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:fontFamily="@font/font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />
</androidx.constraintlayout.widget.ConstraintLayout>